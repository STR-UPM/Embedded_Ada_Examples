with Temperature.Sensor;
with Temperature.Display;

package body Temperature is

   -----------
   -- Start --
   -----------

   procedure Start is
      T : Temperature;
   begin
      loop
         Sensor.Get (T);
         Display.Put (T);
      end loop;
   end Start;

end Temperature;
